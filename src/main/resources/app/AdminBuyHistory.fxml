<AnchorPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController.AdminBuyHistoryController">
    <children>
        <Label layoutX="373.0" layoutY="129.0" prefHeight="62.0" prefWidth="155.0" text="Buy History ">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>
        <TableView fx:id="buytable" layoutX="127.0" layoutY="219.0" prefHeight="386.0" prefWidth="647.0" stylesheets="@../Styles/style.css">
            <columns>
                <TableColumn fx:id="buytblcarname" prefWidth="125.0" text="Car Name" />
                <TableColumn fx:id="buytablecarprice" prefWidth="125.0" text="Car Price" />
                <TableColumn fx:id="buytablebuyname" prefWidth="143.0" text="Buyer Name" />
                <TableColumn fx:id="buytablepurchasedate" prefWidth="130.0" text="Purchase Date" />
                <TableColumn fx:id="buytableleftinstock" prefWidth="123.0" text="Left in stock" />
            </columns>
        </TableView>
      <AnchorPane opacity="0.98" prefHeight="99.0" prefWidth="901.0" style="-fx-background-color: #999; -fx-border-color: #1e1f22;" stylesheets="@../Styles/style.css">
         <children>
            <Button fx:id="btnDashboard" layoutX="150.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleDashboardClick" prefHeight="37.0" prefWidth="102.0" text="%btnDashboard">
               <effect>
                  <InnerShadow height="11.0" radius="5.5" width="13.0" />
               </effect>
            </Button>
            <Button fx:id="btnInsert" layoutX="259.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleInsertClick" prefHeight="37.0" prefWidth="102.0" text="%btnInsert">
               <effect>
                  <InnerShadow height="11.0" radius="5.5" width="13.0" />
               </effect>
            </Button>
            <Button fx:id="btnClients" layoutX="367.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleClientsClick" prefHeight="37.0" prefWidth="102.0" text="%btnClients">
               <effect>
                  <InnerShadow height="11.0" radius="5.5" width="13.0" />
               </effect>
            </Button>
            <Button fx:id="btnMessages" layoutX="475.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleMessageClick" prefHeight="37.0" prefWidth="102.0" text="%btnMessages">
               <effect>
                  <InnerShadow height="11.0" radius="5.5" width="13.0" />
               </effect>
            </Button>
            <ImageView fitHeight="84.0" fitWidth="136.0" layoutY="13.0">
               <image>
                  <Image url="@../Images/2.png" />
               </image>
            </ImageView>
            <Button fx:id="btnLogout" layoutX="790.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleLogoutClick" prefHeight="45.0" prefWidth="102.0" text="%btnLogOut">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow height="28.02" radius="13.51" width="28.02" />
               </effect>
            </Button>
            <Button layoutX="584.0" layoutY="44.0" mnemonicParsing="false" onAction="#handleBuyHistory" prefHeight="37.0" prefWidth="110.0" text="BuyHistory" />
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
