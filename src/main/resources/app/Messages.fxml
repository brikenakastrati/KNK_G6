        <AnchorPane layoutX="-1.0" layoutY="-1.0" opacity="0.98" prefHeight="110.0" prefWidth="916.0" style="-fx-background-color: #999; -fx-border-color: #1e1f22;">
            <children>
                <Button fx:id="btnDashboard" layoutX="170.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleDashboardClick" prefHeight="35.0" prefWidth="83.0" text="Dashboard">
                    <effect>
                        <InnerShadow height="11.0" radius="5.5" width="13.0" />
                    </effect>
                </Button>
                <Button fx:id="btnInsert" layoutX="270.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleInsertClick" prefHeight="35.0" prefWidth="83.0" text="Insert">
                    <effect>
                        <InnerShadow height="11.0" radius="5.5" width="13.0" />
                    </effect>
                </Button>
                <Button fx:id="btnClients" layoutX="370.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleClientsClick" prefHeight="35.0" prefWidth="83.0" text="Clients">
                    <effect>
                        <InnerShadow height="11.0" radius="5.5" width="13.0" />
                    </effect>
                </Button>
                <Button fx:id="btnMessages" layoutX="470.0" layoutY="56.0" mnemonicParsing="false" onAction="#handleMessageClick" prefHeight="35.0" prefWidth="83.0" text="Messages">
                    <effect>
                        <InnerShadow height="11.0" radius="5.5" width="13.0" />
                    </effect>
                </Button>
                <ImageView fitHeight="84.0" fitWidth="136.0" layoutY="13.0">
                    <image>
                        <Image url="@../Images/2.png" />
                    </image>
                </ImageView>
                <Button fx:id="btnLogout" layoutX="789.0" layoutY="55.0" mnemonicParsing="false" onAction="#handleLogoutClick" prefHeight="30.0" prefWidth="83.0" style="-fx-background-color: #FFF;" text="LogOut">
