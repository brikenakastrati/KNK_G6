                  <columns>
                      <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="%FirstName" />
                      <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="%LastName" />
                      <TableColumn fx:id="messageColumn" prefWidth="200.0" text="%Message" />
                  </columns>
              </TableView>


                <TextField fx:id="firstNameFilterField" layoutX="77.0" layoutY="164.0" prefWidth="150.0" promptText="Enter First Name" />
                <TextField fx:id="lastNameFilterField" layoutX="250.0" layoutY="163.0" prefWidth="150.0" promptText="Enter Last Name" />
                <Button layoutX="431.0" layoutY="162.0" mnemonicParsing="false" onAction="#handleMessageClick" text="Filter" />
